@model Rocky.Models.Category
@{
    ViewData["Title"] = "edit";
}

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden/>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-4 pl-5">
                        <input type="submit" class="btn btn-info form-control" value="Update" />
                    </div>
                    <div class="col-4 pr-5">
                        <a asp-action="Index" class="btn btn-primary form-control">Back</a>
                    </div>
                </div>

            </div>
            <div class="col-4">
                <div class="form-group row">
                    <div class="col-12">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row" style="margin-top:25px;">
                    <div class="col-12">
                        <span asp-validation-for="DisplayOrder" class="text-danger "></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}




